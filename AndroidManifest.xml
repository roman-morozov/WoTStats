        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:label="@string/search_name" android:name=".SelectPlayer"/>
        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:label="@string/title_section6" android:name=".TanksDetailActivity" android:parentActivityName=".MainActivity"/>
        <activity android:label="@string/title_activity_session_history_graph" android:name=".SessionHistoryGraphActivity" android:parentActivityName=".MainActivity"/>
